html
    font-family 'Roboto Regular', 'Arial'
    overflow-y scroll
    cursor default
    user-select none

header, main, footer, ul
    margin 0
    padding 0

.content
    width 1240px
    margin 0 auto

header
    height 933px
    background #282828 url(images/bg_innovation.jpg) 50% no-repeat

    .content
        padding-top 40px

    .logo
        float left
        sprite($s-icon_bebrand-red)

    .contact 
        span, span a
            display block
            color #fefefe
            font-size 16px
            text-align right

        span:nth-child(1)
            color #b02624
        
        span:nth-child(2n)
            font-style italic

        span:nth-child(3)
            font-size 34px

    h1
        margin-top 120px
        color #ffffff
        font-size 78px
        font-family 'Roboto Medium', 'Arial'
        font-weight 500
        line-height 110px
        text-align center
        text-transform uppercase
    
    .request
        display block
        margin-top 200px
        color #ffffff
        font-size 45px
        font-family 'Roboto Light', 'Arial'
        font-weight 300
        text-align center
        text-transform uppercase     
        &::after
            sprite($s-icon_arrow)
            margin 0 auto;
            margin-top 40px
            content ''
            text-align center

main
    z-index 0
    position relative
    height 2470px //#f4f5f6
    background-image linear-gradient(rgba(255, 255, 255, .7),rgba(255, 255, 255, .7)),url(images/bg_pattern.jpg) 
    padding-top 80px

    .chance
        width 1000px
        margin 0 auto

        h2, span
            color #292929
            text-align center
            font-size 24px

        h2
            margin 0
            font-size 40px
            text-transform uppercase

        span
            display block
            margin-top 60px
            margin-bottom 25px

        .chance-elements
            display flex
            flex-wrap wrap
            justify-content space-between
            

            figure
                display flex
                width 300px
                height 150px
                margin 0
                margin-top 50px
                flex-direction column
                justify-content space-between 

                &:nth-child(1) > i
                    sprite($s-preference_money)
                &:nth-child(2) > i
                    sprite($s-preference_shield)
                &:nth-child(3) > i
                    sprite($s-preference_globe)
                &:nth-child(4) > i
                    sprite($s-preference_approve-invoice)
                &:nth-child(5) > i
                    sprite($s-preference_billboard)
                &:nth-child(6) > i
                    sprite($s-preference_trophy)

                & > i
                    margin 0 auto

            figure > figcaption
                color #040404
                font-size 16px
                text-align center
            
    .red-arrow
        height 348px
        margin-top 110px
        background url(images/bg_business-growth.png) no-repeat
        &::before
            display table
            content ''

        p
            display block
            width 810px
            height 100px
            margin-top 110px
            margin-left 20px
            color #fefefe
            font-size 42px
    
     .clients
        @extends .content
        
        p
            margin-top 90px
            color #292929
            line-height 50px
            font-size 40px
            text-align center
            text-transform uppercase
    
        span
            display block
            margin-top 65px
            color #292929
            font-size 24px
            text-align center

        .companies
            ul
                display flex
                flex-direction row
                list-style none

                li 
                    span
                        padding 0 25px
                        color #99322d
                        font-size 18px

                    ul          
                        display flex
                        height 150px
                        margin-top 50px
                        flex-direction column
                        flex-wrap wrap
                        flex-shrink 0
                        align-items center
                        justify-content space-around
                        list-style none

                $images = ((bbk vitek scarlett) (parapharm kanonpharm) (sibur marussia) (danone gek) (redcoub savage eldorado) (vdnh dinamo kfc))
                for $num in (1..6)
                    li:nth-child({$num})
                        for $linum in (1..3)
                            ul li:nth-child({$linum})
                                getSprite($images[(-1 + $num)][(-1 + $linum)])
                
                li:last-child
                    span a
                        color #3367d0
                        font-size 15px

                    ul
                        flex-direction row

    article
        width 764px
        height 534px
        margin 0 auto
        margin-top 90px
        background #ffffff
        box-shadow 0 0 46px rgba(69,11,8,.2)

        header
            height 58px
            color #0b0a0a
            font-size 34px
            padding-top 22px
            text-align center
            background #f1f1f1

        form
            span
                display block
                margin-top 55px
                color #0b0a0a
                font-size 29px
                text-align center
            
            .regtype
                position relative
                display flex
                height 105px
                margin-top 45px
                padding-left 40px
                padding-right @padding-left
                justify-content space-between
                &::after
                    position absolute
                    bottom 0
                    width @width - @padding-left*2
                    border-bottom 2px solid #e9e9e9
                    content ''

                input[type=radio]
                    display none
                
                input[type=radio] + label
                    display block
                    width 210px
                    height 38px
                    padding-top 18px
                    font-size 18px
                    text-align center

                input[type=radio]:not(:checked) + label
                    color #010101
                    background #dcdcdc

                input[type=radio]:checked + label
                    color #ffffff
                    background #98312c
                    
            input[type=submit]
                display block
                width 210px
                height 60px
                margin 0 auto
                margin-top 40px
                color #ffffff
                font-size 18px
                background #98312c
                border 0
                &:hover
                    background #5f302d

            .pagination
                width 350px
                height 60px
                margin 0 auto
                margin-top 30px
                i
                    sprite($s-page-arrow_second_off)
                    float left
                    margin-left -10px
                i:first-child
                    sprite($s-page-arrow_first)
                    margin-left 0px
                i span
                    margin-top 14px
                    color #98312c
                    font-size 24px

                i[data-blocked="false"] span
                    color #ffffff
    .legend
        width 764px
        margin 0 auto
        margin-top 80px
        color #ffffff
        font-size 15px

        p
            display block
            padding-left 20px
            a
                color #6da3f4
        p:first-child
            font-size 14px
        
        p:last-child
            padding-right 50px
            line-height 24px

    .angle
        z-index -1
        position absolute
        display block
        bottom: 0
        width 100%
        height 800px
        margin-top -800px
        background url(images/bg_angle.svg) no-repeat center bottom
        content: ''

footer
    position relative
    height 155px
    padding-top 60px
    background #292929

    .content
        display flex
        justify-content space-between
        &::before
            @extends .content
            position absolute
            display block
            margin-top -62px
            border-top 4px solid #dcdcdc
            content ''
        
        section:first-child
            i:first-child
                sprite($s-icon_bebrand-gray)
            p
                width 730px
                margin-left 73px
                margin-top -35px
                color #ffffff
                font-size 16px
                line-height 25px

        section:last-child
            width 250px

            span
                display block
                color #fffefe
                line-height 25px

            span:nth-child(2)::before
                sprite($s-icon_kazan)
                float left
                margin-top 5px
                margin-right 8px
                content ''

            span:last-child::before
                sprite($s-icon-call)
                float left
                margin-right 14px
                content ''

            

